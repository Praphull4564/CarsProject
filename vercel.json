{
  "version": 2,
  "builds": [
    {
      "src": "package.json",  
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"  
      }
    },
    {
      "src": "server/index.js",  
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server/index.js"  
    },
    {
      "source": "/static/(.*)",
      "destination": "/dist/static/$1"  
    },
    {
      "source": "/(.*)",
      "destination": "/dist/index.html"  
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
