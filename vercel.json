{
  "version": 2,
  "builds": [
    {
      "src": "package.json",  // Your frontend package.json
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"  // Points to your build output folder
      }
    },
    {
      "src": "server/index.js",  // Your backend entry point
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server/index.js"  // All /api/* routes to backend
    },
    {
      "source": "/static/(.*)",
      "destination": "/dist/static/$1"  // Static assets from build
    },
    {
      "source": "/(.*)",
      "destination": "/dist/index.html"  // All other routes to frontend
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
